{
	"name": "nextjs-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"tsc": "tsc --noEmit",
		"format": "biome format --write .",
		"lint": "oxlint --type-aware --fix",
		"check": "biome check --write .",
		"verify": "pnpm run format && pnpm run check && pnpm run lint && pnpm run tsc",
		"auth:generate": "dotenvx run -f .env.local -- cli generate --config src/lib/auth/auth.ts --output src/server/database/auth-schema.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate-local": "dotenvx run -f .env.local -- drizzle-kit migrate"
	},
	"dependencies": {
		"@base-ui-components/react": "1.0.0-beta.7",
		"@hookform/resolvers": "^5.2.2",
		"@t3-oss/env-nextjs": "^0.13.8",
		"@tanstack/react-query": "^5.90.12",
		"@trpc/client": "^11.7.2",
		"@trpc/next": "^11.7.2",
		"@trpc/react-query": "^11.7.2",
		"@trpc/server": "^11.7.2",
		"better-auth": "^1.4.6",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.45.1",
		"geist": "^1.5.1",
		"lucide-react": "^0.561.0",
		"neverthrow": "^8.2.0",
		"next": "^16.0.10",
		"next-themes": "^0.4.6",
		"pg": "^8.16.3",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-hook-form": "^7.68.0",
		"superjson": "^2.2.6",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.4.6",
		"@biomejs/biome": "2.3.8",
		"@dotenvx/dotenvx": "^1.51.1",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "25.0.1",
		"@types/pg": "^8.16.0",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"drizzle-kit": "^0.31.8",
		"oxlint": "^1.32.0",
		"oxlint-tsgolint": "^0.8.6",
		"postcss": "^8.5.6",
		"shadcn": "3.5.2",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "5.9.3"
	},
	"packageManager": "pnpm@10.18.0",
	"engines": {
		"node": "24",
		"pnpm": "10"
	}
}
